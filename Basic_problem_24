#include <stdio.h>
#include <math.h>  

int main() {
    double r;  
    int n, p;  
    scanf("%lf %d %d", &r, &n, &p);

    if (n == 0 || p == 0) {
        printf("0\n");
        return 0;
    }

    double total = 0.0; 

    for (int i = 0; i < n; i++) {
        total += p;       
        total *= (1 + r);  
    }

    printf("%d\n", (int)floor(total));

    return 0;
}
